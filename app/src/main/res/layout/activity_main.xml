<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Team A"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="102dp"
                android:layout_height="45dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="65dp" />

            <Button
                android:id="@+id/buttonPanel_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="click3"
                android:padding="8dp"
                android:text="+3 points" />

            <Button
                android:id="@+id/buttonPanel_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="click2"
                android:padding="8dp"
                android:text="+2 points" />

            <Button
                android:id="@+id/buttonPanel_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="freethrow"
                android:padding="8dp"
                android:text="free throw"

                />
        </LinearLayout>





        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Team B"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="102dp"
                android:layout_height="45dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="65dp" />

            <Button
                android:id="@+id/buttonPanel_1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="click3b"
                android:padding="8dp"
                android:text="+3 points" />

            <Button
                android:id="@+id/buttonPanel_2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="click2b"
                android:padding="8dp"
                android:text="+2 points" />

            <Button
                android:id="@+id/buttonPanel_3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="freethrowb"
                android:padding="8dp"
                android:text="free throw"

                />
        </LinearLayout>



    </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="reset"
            android:onClick="reset"/>


</RelativeLayout>


</android.support.constraint.ConstraintLayout>
